<!-- Text Modal -->
<div id="textModal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-40 hidden">
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-md">
    <div class="flex items-center justify-between px-6 py-4 border-b">
      <h5 class="text-lg font-bold text-blue-800">Send this coupon/card as a text message:</h5>
      <button type="button" class="text-gray-400 hover:text-gray-600 text-2xl font-bold focus:outline-none" onclick="document.getElementById('textModal').classList.add('hidden')">&times;</button>
    </div>
    <div class="px-6 py-4">
      <%= form_tag text_card_path, class: "space-y-4" do %>
        <div>
          <%= text_field_tag(:send_number, nil, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none", placeholder: "Enter Mobile Number", required: true) %>
        </div>
        <div>
          <%= recaptcha_tags site_key: ENV["RECAPTCHA_SECRET_KEY"] %>
        </div>
        <div>
          <button type="submit" class="py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow hover:bg-blue-700 transition w-full flex items-center justify-center" name="submit">
            <i class="fas fa-phone mr-2"></i> SEND TEXT
          </button>
        </div>
        <p class="hidden">
          <label for="address" class="address">If you are a human, don't fill out this field!</label>
          <input name="address" type="text" id="address" maxlength="50"/>
        </p>
      <% end %>
    </div>
    <div class="px-6 py-4 border-t flex justify-end">
      <button type="button" class="py-2 px-4 bg-gray-200 text-gray-700 font-semibold rounded-lg shadow hover:bg-gray-300 transition" onclick="document.getElementById('textModal').classList.add('hidden')">Close</button>
    </div>
  </div>
</div>